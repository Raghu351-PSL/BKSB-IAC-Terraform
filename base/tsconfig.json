{ 
  "compilerOptions": { 
    "target": "ES2018", 
    "module": "commonjs", 
    "lib": [ 
      "es2018" 
    ], 
    "declaration": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "noImplicitThis": true, 
    "alwaysStrict": true, 
    "noUnusedLocals": false, 
    "noUnusedParameters": false, 
    "noImplicitReturns": true, 
    "noFallthroughCasesInSwitch": false, 
    "inlineSourceMap": true, 
    "inlineSources": true, 
    "experimentalDecorators": true, 
    "strictPropertyInitialization": false, 
    "typeRoots": [ 
      "./node_modules/@types" 
    ], 
    "paths": { 
      "@terraform-modules/*": ["lib/terraform-modules/*"], // Added support for Terraform modules 
      "@cdk-replacement/*": ["lib/cdk-replacement/*"] // Added support for CDK replacement modules 
    } 
  }, 
  "exclude": [ 
    "node_modules", 
    "cdk.out", 
    "terraform/" // Ensure Terraform files are excluded 
  ] 
}